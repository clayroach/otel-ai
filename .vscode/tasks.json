{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Code from Note",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/generate-from-note.sh",
      "args": ["${file}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "build"
    },
    {
      "label": "Update Note from Code",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/update-note-from-code.sh",
      "args": ["${fileDirname}"],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Create Daily Note",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/create-daily-note.sh",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Sync All Package Notes",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/sync-all-notes.sh",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Open Dendron Preview",
      "type": "shell",
      "command": "npx",
      "args": [
        "dendron-cli",
        "launchEngineServer",
        "--wsRoot",
        ".",
        "--vaults",
        "notes",
        "--port",
        "3005"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "group": "none"
    },
    {
      "label": "Run Tests with Coverage",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:coverage"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["typecheck"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Lint and Fix",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint:fix"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$eslint-stylish"
    }
  ]
}
