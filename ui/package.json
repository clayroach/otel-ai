{
  "name": "@otel-ai/ui",
  "version": "1.0.0",
  "description": "AI-native observability UI with Electron and Monaco integration",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:electron\"",
    "dev:web": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "pnpm build:web && pnpm build:electron",
    "build:web": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "@monaco-editor/react": "^4.5.1",
    "antd": "^5.27.4",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.2",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "monaco-editor": "^0.53.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-query": "^3.39.3",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.9.3",
    "sql-formatter": "^15.6.9",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^7.1.7",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.otel-ai.ui",
    "productName": "OTel AI Observability",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}